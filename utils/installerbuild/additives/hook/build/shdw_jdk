#!/usr/bin/env bash
# Created by Tobias Powalowski <tpowa@archlinux.org>

build ()
{
    add_dir "/usr/lib/jvm"
    for i in $(find /usr/lib/jvm/ -type d); do
        add_dir "$i"
    done
    for i in $(find /usr/lib/jvm/ -type f); do
        add_file "$i"
    done
    add_dir "/etc/java-8-openjdk/"
    for i in $(find /etc/java-8-openjdk/ -type d); do
        add_dir "$i"
    done
    for i in $(find /etc/java-8-openjdk/ -type f); do
        add_file "$i"
    done

}

help ()
{
cat<<HELPEOF
  This hook includes java 8 openjdk
HELPEOF
} 
